{
  "name": "tiktoklive",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node server.js",
    "build": "next build",
    "start": "NODE_ENV=production node server.js",
    "lint": "eslint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:p0": "playwright test --grep 'P0'",
    "test:e2e:p1": "playwright test --grep 'P0|P1'",
    "test:e2e:p2": "playwright test --grep 'P2'",
    "test:api": "playwright test tests/api",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:chromium:p0": "playwright test --project=chromium --grep 'P0'",
    "test:e2e:chromium:p1": "playwright test --project=chromium --grep 'P0|P1'",
    "test:e2e:chromium:p2": "playwright test --project=chromium --grep 'P2'",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "check-bundle-size": "node scripts/check-overlay-bundle-size.js",
    "test:obs-integration": "node scripts/obs-integration-test.js"
  },
  "dependencies": {
    "@types/correlation-id": "^3.0.0",
    "@types/uuid": "^10.0.0",
    "next": "^14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "socket.io": "^4.7.5",
    "tiktok-live-connector": "^2.1.1-beta1",
    "uuid": "^13.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.2.0",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@types/crypto-js": "^4.2.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "crypto-js": "^4.2.0",
    "eslint": "^9",
    "eslint-config-next": "^14.2.5",
    "jest": "^30.2.0",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.6",
    "typescript": "^5"
  }
}
